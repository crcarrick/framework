{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", ".framework"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": ["es2022", "dom"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "types": ["react/experimental"],
  },
}
